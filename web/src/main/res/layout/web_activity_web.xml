<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_close_black_24dp"
        app:popupTheme="@style/WebAppTheme.PopupOverlay">

        <TextSwitcher
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            tools:ignore="RtlHardcoded"/>

    </android.support.v7.widget.Toolbar>

    <com.drakeet.rebase.web.ObservableWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>

    <com.daimajia.numberprogressbar.NumberProgressBar
        style="@style/NumberProgressBar_Funny_Orange"
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        app:progress_reached_bar_height="2dp"
        app:progress_unreached_bar_height="2dp"
        app:progress_text_visibility="invisible"
        app:progress_text_size="0sp"/>

</RelativeLayout>
